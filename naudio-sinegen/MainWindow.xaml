<Window x:Class="naudio_sinegen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="200" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*" />
            <ColumnDefinition Width="480*" />
        </Grid.ColumnDefinitions>
        <Button Content="Play" Height="23" HorizontalAlignment="Left" Margin="42,83,0,0" Name="playButton" VerticalAlignment="Top" Width="75" Grid.Column="1" Click="playButton_Click" />
        <Label Content="Sine Wave Generator v1.2" Grid.Column="1" Height="38" HorizontalAlignment="Left" Margin="14,9,0,0" Name="label1" VerticalAlignment="Top" FontWeight="Bold" FontSize="18" />
        <Label Content="Frequency (Hz):" Grid.Column="1" Height="28" Margin="29,47,145,0" Name="label2" VerticalAlignment="Top" />
        <TextBox Grid.Column="1" Height="26" HorizontalAlignment="Left" Margin="128,49,0,0" Name="freqBox" VerticalAlignment="Top" Width="100" Text="440" />
        <Button Content="Update" Grid.Column="1" Height="23" HorizontalAlignment="Right" Margin="0,83,46,0" Name="updateButton" VerticalAlignment="Top" Width="75" Click="updateButton_Click" />
        <Slider Grid.Column="1" Height="23" HorizontalAlignment="Left" Margin="30,126,0,0" Name="freqSlider" VerticalAlignment="Top" Width="199" ValueChanged="freqSlider_Change" />
    </Grid>
</Window>

